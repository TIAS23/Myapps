<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/hallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text= "Your Orders"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/yellow_fdd"
        android:fontFamily="@font/poppinsbold"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly4"
        android:layout_below="@id/ly2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ly5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppinsbold"
            android:text="Combo Burger"
            android:textSize="@dimen/dp_14"
            tools:ignore="TextSizeCheck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:fontFamily="@font/poppinsregular"
            android:text="Shortbread, chocolate turtle, and red velvet"
            android:textSize="@dimen/dp_12"
            tools:ignore="TextSizeCheck"/>

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppinsregular"
            android:text="Rp. 30.000,."
            android:textSize="@dimen/dp_12"
            android:textColor="@color/red_a30"
            tools:ignore="TextSizeCheck"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly6"
        android:layout_below="@id/ly4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="320dp">

        <LinearLayout
            android:id="@+id/ly7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/poppinsbold"
                android:text="Subtotal"
                android:textSize="@dimen/dp_14"
                tools:ignore="TextSizeCheck"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppinsregular"
            android:text="Rp. 60.000,."
            android:textSize="@dimen/dp_12"
            android:textColor="@color/red_a30"
            tools:ignore="TextSizeCheck"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly2"
        android:layout_below="@id/ly1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly3"
            android:layout_below="@id/ly1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/poppinsbold"
                android:text="Cookies Sandwitch"
                android:textSize="@dimen/dp_14"
                tools:ignore="TextSizeCheck"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/poppinsregular"
                android:text="Shortbread, chocolate turtle, and red velvet"
                android:textSize="@dimen/dp_12"
                tools:ignore="TextSizeCheck"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppinsregular"
            android:text="Rp. 30.000,."
            android:textSize="@dimen/dp_12"
            android:textColor="@color/red_a30"
            tools:ignore="TextSizeCheck"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly8"
        android:layout_below="@id/ly6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly9"
            android:layout_below="@id/ly1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/poppinsbold"
                android:text="Delivery"
                android:textSize="@dimen/dp_14"
                tools:ignore="TextSizeCheck"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/poppinsregular"
            android:text="Rp. 60.000,."
            android:textSize="@dimen/dp_12"
            android:textColor="@color/red_a30"
            tools:ignore="TextSizeCheck"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="CONTINUE TRANSACTION"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>